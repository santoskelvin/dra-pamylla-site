/* Estilos para o menu mobile */
.menu-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 60px;
    background: transparent;
    border: none;
    cursor: pointer;
    color: #333;
    padding: 0;
    z-index: 1050;
    margin-right: 10px;
}

.menu-toggle i {
    font-size: 24px;
    transition: all 0.3s ease;
}

.menu-toggle i.fa-times {
    color: #3A2F2B;
    font-size: 28px;
}

.mobile-menu {
    position: fixed;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100vh;
    background-color: white;
    z-index: 1020;
    transition: left 0.4s ease-in-out;
    padding-top: 60px;
    overflow-y: auto;
}

.mobile-menu.active {
    left: 0;
}

.mobile-menu ul {
    flex-direction: column;
    display: flex;
    padding: 0;
    width: 100%;
}

.mobile-menu ul li {
    width: 100%;
    border-bottom: 1px solid #eee;
}

.mobile-menu ul li a {
    display: block;
    padding: 1.5rem 2rem;
    font-size: 1.1rem;
    font-weight: 500;
    color: #3A2F2B;
}

body.menu-open {
    overflow: hidden;
} 

/* Ajustes para o menu dropdown de ajuda */
.ajuda-container {
    display: inline-block;
    position: relative;
    z-index: 1005;
}

.ajuda-btn {
    background: transparent;
    border: none;
    padding: 8px 15px;
    display: flex;
    align-items: center;
    color: #3A2F2B;
    font-size: 15px;
    font-weight: 500;
    cursor: pointer;
    transition: color 0.3s;
}

.ajuda-btn i {
    margin-right: 5px;
    font-size: 16px;
    color: #CBA135;
}

.ajuda-btn:hover {
    color: #CBA135;
}

.ajuda-dropdown {
    position: absolute;
    top: 100%;
    right: 0;
    background: #fff;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    width: auto;
    min-width: 220px;
    max-width: 280px;
    padding: 10px;
    margin-top: 5px;
    
    /* Estado inicial - oculto */
    visibility: hidden;
    opacity: 0;
    transform: translateY(-10px);
    transition: all 0.3s ease;
    pointer-events: none;
    z-index: 1010;
}

/* Estado ativo - vis√≠vel */
.ajuda-container.active .ajuda-dropdown {
    visibility: visible;
    opacity: 1;
    transform: translateY(0);
    pointer-events: all;
} 
